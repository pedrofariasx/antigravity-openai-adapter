# Antigravity OpenAI Adapter Configuration

# Server port
PORT=8081

# Upstream antigravity-claude-proxy URL
# When running in Docker, use the service name or host.docker.internal
UPSTREAM_URL=http://localhost:8080

# API key for this adapter (optional)
# API_KEY=your_adapter_api_key

# API key for upstream (usually 'test' for antigravity-claude-proxy)
UPSTREAM_API_KEY=test

# Automatically start antigravity-claude-proxy via npx
# Set to false if you want to run the proxy separately
AUTO_START_PROXY=true

# Enable debug logging
DEBUG=false